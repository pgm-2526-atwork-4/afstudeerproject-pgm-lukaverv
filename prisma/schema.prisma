generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isVerified Boolean  @default(false) // Field to track email verification status
  createdAt DateTime @default(now())
}
